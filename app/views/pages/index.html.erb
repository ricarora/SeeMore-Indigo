<%= link_to "Sign out", sign_out_path %>
<%= link_to current_bro.name, show_path(current_bro.id) %>
<%= link_to "Search!", twitter_search_path %>

<h1> Feedora </h1>

<ul>
  <% @tweets.each do |tweet| %>
    <li>
      <%= image_tag("twitter-64-black.png") %>
      <!--TODO: Add alt text for accessibility-->
      <%= image_tag(tweet.user.profile_image_url.to_s) %>
      <%= time_ago_in_words(tweet.created_at) %> ago
      <%= tweet.user.name %>
      @<%= tweet.user.username %>
      <%= tweet.full_text %></li>
  <% end %>
</ul>
